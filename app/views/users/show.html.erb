<div class="container px-5 px-sm-0" >
  <div class= "row">
    <%= render 'books/book', user: @user %>
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to book.title, book_path(book.id)%></td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
