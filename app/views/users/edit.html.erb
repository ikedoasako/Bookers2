<div class="container" >
  <div class= "row">
    <div class= "col-auto">
      <h1>User info</h1>
        <div class="form-group">
          <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <% end %>
          <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
          <br>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
            <br>
            <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="inputIntroducution">Introducution</label>
            <br>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroducution", placeholder: "Introducution" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>