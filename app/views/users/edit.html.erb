<div class="container" >
  <div class= "row">
    <div class= "col-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this user from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <br>
        <%= f.file_field :get_profile_image, placeholder: "Image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="inputIntroducution">Introducution</label>
        <br>
        <%= f.text_area :introducution, autofocus: true, id:"inputIntroducution", placeholder: "Introducution" %>
      </div>
      <div class="form-group">
        <a><%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>