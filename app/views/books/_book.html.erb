<div class= "col-md-3">
  <h1>User info</h1>
    <%= image_tag user.get_profile_image(70,70) %>
    <table class= "table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introducution</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <a>
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary" do %>
      <i class="fas fa-user-cog"></i>
        <% end %>
      </a>
    </div>
    <h2>New Book</h2>
      <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <h4>body</h4>
          <%= f.text_area :opinion, class:"form-control" %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
</div>
