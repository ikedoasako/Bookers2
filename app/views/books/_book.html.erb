<h1>User info</h1>
<div class="container px5 px-sm-0" >
  <div class= "row">
    <div class "col -md-3">
  <%= image_tag user.get_profile_image(100,100) %>
</div>
<div>name<%= user.name %></div>
<div>introduction<%= user.introduction %></div>

<div><%= link_to "e", edit_user_path %></div>

<h1>New book</h1>

<% form_with model: @book do |f| %>
  <div>Title<%= f.text_field :title %></div>
  <div>Opinion<%= f.text_area :opinion %></div>
  <%= f.submit "Create Book" %>
<% end %>
