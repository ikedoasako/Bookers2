<div class="container px-5 px-sm-0" >
  <div class= "row">
    <div class= "col-md-3">
      <h1>User info</h1>
        <%= image_tag @user.get_profile_image(70,70) %>
        <table>
          <tr>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <th>introducution</th>
          </tr>
        </table>
      <h2>New Book</h2>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>body</h4>
        <%= f.text_area :opinion %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(70,70) %></td>
              <td><%= @user.name %></td>
              <td><%= link_to book.title, book_path(book.id)%></td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
