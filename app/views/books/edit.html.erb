<div class="container px-5 px-sm-0" >
  <div class= "row">
    <h2>Editing Book</h2>
      <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <h4>body</h4>
          <%= f.text_area :opinion, class:"form-control" %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>


  </div>
</div>

