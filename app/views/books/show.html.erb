<div class="container px-5 px-sm-0" >
  <div class= "row">
    <%= render 'book', user: @user %>
      <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(80,80) %></td>
              <td><%= link_to @book.title, book_path(@book.id)%></td>
              <td><%= @book.opinion %></td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div>
